    <div
        id="lkn-bb-pix-toast"
        class="toast"
        style="margin: 0 auto 0;"
        data-delay="5000"
    >
        <div class="toast-header">
            <svg
                class="bd-placeholder-img rounded mr-2"
                width="20"
                height="20"
                xmlns="http://www.w3.org/2000/svg"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
                role="img"
            >
                <rect
                    width="100%"
                    height="100%"
